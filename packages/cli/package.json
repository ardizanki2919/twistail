{
    "name": "twistail",
    "version": "0.0.3",
    "type": "module",
    "license": "MIT",
    "description": "A CLI for managing UI components in your project.",
    "author": "Aris Ripandi <aris@duck.com>",
    "homepage": "https://twistail.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/riipandi/twistail"
    },
    "bugs": {
        "url": "https://github.com/riipandi/twistail/issues"
    },
    "bin": "./bin/twistail.mjs",
    "exports": "./dist/index.mjs",
    "files": [
        "bin/**/*",
        "dist/**/*",
        "!tests/**/*",
        "!dist/**/*.*.map",
        "!tests/**/*.*.map",
        "package.json",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "unbuild",
        "build:stub": "unbuild --stub",
        "prepack": "pnpm --silent run build",
        "prepublishOnly": "pnpm run build",
        "publish:dry": "pnpm publish --dry-run --no-git-checks",
        "cleanup": "pnpm dlx rimraf dist node_modules",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "citty": "^0.1.6",
        "consola": "^3.4.1",
        "giget": "^2.0.0",
        "make-dir": "^5.0.0",
        "node-jq": "^6.0.1",
        "pathe": "^2.0.3",
        "std-env": "^3.8.1"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "@repo/config-typescript": "workspace:*",
        "@types/node": "^22.13.10",
        "@types/react": "^19.0.10",
        "rollup": "^4.36.0",
        "typescript": "catalog:",
        "unbuild": "^3.5.0",
        "unplugin-purge-polyfills": "^0.0.7"
    },
    "publishConfig": {
        "executableFiles": ["./bin/twistail.mjs"],
        "access": "public"
    },
    "keywords": ["react", "ui", "tailwindcss", "radix-ui", "shadcn", "cli", "command-line"]
}
