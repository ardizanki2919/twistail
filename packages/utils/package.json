{
    "name": "twistail-utils",
    "version": "0.5.3",
    "type": "module",
    "license": "MIT",
    "description": "A set of utility functions used by Twistail",
    "author": "Aris Ripandi <aris@duck.com>",
    "homepage": "https://twistail.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/riipandi/twistail"
    },
    "bugs": {
        "url": "https://github.com/riipandi/twistail/issues"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./dist/lib/index.d.mts",
                "default": "./dist/lib/index.mjs"
            }
        },
        "./hooks": {
            "import": {
                "types": "./dist/hooks/index.d.mts",
                "default": "./dist/hooks/index.mjs"
            }
        }
    },
    "files": [
        "dist/**/*",
        "!tests/**/*",
        "!dist/**/*.*.map",
        "!tests/**/*.*.map",
        "package.json",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "dev": "unbuild",
        "build": "unbuild",
        "prepack": "pnpm run build",
        "prepublishOnly": "pnpm run build",
        "publish:dry": "pnpm publish --dry-run --no-git-checks",
        "cleanup": "pnpm dlx rimraf dist node_modules",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "react": "^18.0 || ^19.0",
        "react-dom": "^18.0 || ^19.0"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.0.2",
        "tailwind-variants": "^1.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "@repo/config-typescript": "workspace:*",
        "@types/react": "^19.0.12",
        "pathe": "^2.0.3",
        "typescript": "catalog:",
        "unbuild": "^3.5.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": ["react", "ui", "tailwindcss", "radix-ui", "shadcn"]
}
