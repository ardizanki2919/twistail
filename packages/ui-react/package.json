{
    "name": "twistail-react",
    "version": "0.0.7",
    "type": "module",
    "description": "Twistail UI Components",
    "author": "Aris Ripandi <aris@duck.com>",
    "licenses": [
        {
            "type": "Apache-2.0",
            "url": "https://github.com/riipandi/twistail/blob/main/LICENSE-APACHE"
        },
        {
            "type": "MIT",
            "url": "https://github.com/riipandi/twistail/blob/main/LICENSE-MIT"
        }
    ],
    "homepage": "https://twistail.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/riipandi/twistail"
    },
    "bugs": {
        "url": "https://github.com/riipandi/twistail/issues"
    },
    "scripts": {
        "build": "pnpm -s build:css && pnpm -s build:storybook",
        "start": "pnpm dlx local-web-server -p 6006 -d storybook-static",
        "storybook": "VITE_CJS_IGNORE_WARNING=true storybook dev -p 6006 --no-open",
        "build:storybook": "VITE_CJS_IGNORE_WARNING=true storybook build -o storybook-static",
        "build:css": "(cd src && find . -name \"*.css\" -exec tailwindcss -i {} -o ../dist/{} --minify \\;)",
        "dev": "tailwindcss -i ./src/styles/global.css -o ./dist/global.css --watch",
        "cleanup": "pnpm dlx rimraf dist node_modules storybook-static",
        "publish:dry": "pnpm publish --dry-run --no-git-checks",
        "prepublishOnly": "pnpm -s build:css",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "typecheck": "tsc --noEmit"
    },
    "exports": {
        ".": "./src/components/index.ts",
        "./chart-utils": "./src/utils/chart-utils.ts",
        "./global.css": "./dist/styles/global.css",
        "./theme.css": "./dist/styles/theme.css"
    },
    "files": [
        "dist/**/*",
        "!tests/**/*",
        "!dist/**/*.*.map",
        "!tests/**/*.*.map",
        "package.json",
        "LICENSE-APACHE",
        "LICENSE-MIT",
        "README.md"
    ],
    "peerDependencies": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "dependencies": {
        "@internationalized/date": "^3.7.0",
        "@react-aria/datepicker": "^3.14.1",
        "@react-stately/datepicker": "^3.13.0",
        "date-fns": "4.1.0",
        "lucide-react": "^0.482.0",
        "next-themes": "^0.4.6",
        "radix-ui": "^1.1.3",
        "react-day-picker": "9.6.2",
        "recharts": "^2.15.1",
        "sonner": "^2.0.1",
        "tailwind-variants": "^1.0.0",
        "twistail-utils": "workspace:*"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "@repo/config-typescript": "workspace:*",
        "@storybook/addon-a11y": "^8.6.6",
        "@storybook/addon-essentials": "^8.6.6",
        "@storybook/addon-interactions": "^8.6.6",
        "@storybook/addon-links": "^8.6.6",
        "@storybook/blocks": "^8.6.6",
        "@storybook/core-events": "^8.6.6",
        "@storybook/manager-api": "^8.6.6",
        "@storybook/react": "^8.6.6",
        "@storybook/react-vite": "^8.6.6",
        "@storybook/test": "^8.6.6",
        "@storybook/theming": "^8.6.6",
        "@tailwindcss/cli": "4.0.14",
        "@tailwindcss/postcss": "^4.0.14",
        "@types/react": "^19.0.10",
        "pathe": "^2.0.3",
        "postcss": "^8.5.3",
        "postcss-load-config": "^6.0.1",
        "react-router": "^7.3.0",
        "storybook": "^8.6.6",
        "tailwindcss": "^4.0.14",
        "typescript": "catalog:",
        "vite": "^6.2.2",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": ["react", "ui", "tailwindcss", "radix-ui", "shadcn"]
}
